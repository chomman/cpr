<%@page session="true" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@include file="/WEB-INF/jsp/include/taglibs.jsp"%>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="cs">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <decorator:usePage id="myPage" />
  <title><decorator:title/> <c:if test="${not empty myPage.title}">-</c:if> ${common.settings.title}</title>

  <link rel="stylesheet" href="${common.externalCssFolderUrl}/css/screen.css" type="text/css" media="screen, projection"/>
  <link rel="stylesheet" href="<c:url value="/data/css/screen-editable.css"/>" type="text/css" media="screen, projection"/>
  <link rel="stylesheet" href="<c:url value="/data/css/eshop/screen-editable.css"/>" type="text/css" media="screen, projection"/>
  <link rel="stylesheet" href="${common.externalCssFolderUrl}/css/print.css" type="text/css" media="print"/>
  <link rel="stylesheet" href="<c:url value='/data/lightbox/css/lightbox.css' />" type="text/css" media="screen"/>
  <link rel="shortcut icon" href="<c:url value='/favicon.ico' />" type="image/x-icon" />  

  <c:if test="${empty SEO}">
    <meta name="description" content="<fmt:message key="head.description" defaultMessage="Stavbomat.cz - stavební firmy a dodavatelé z jednoho místa" />" />
    <meta name="keywords" content="<fmt:message key="head.keywords" defaultMessage="Stavbomat.cz, stavební firmy, stavební dodavatelé, stavba, dodavatel, stavebniny" />" />
  </c:if>
  <c:if test="${not empty SEO}">
    <meta name="description" content="<c:out value="${SEO.metaDescription}" />" />
    <meta name="keywords" content="<c:out value="${SEO.metaKeywords}" />" />
  </c:if>

  <!--[if lt IE 8]>
    <link rel="stylesheet" href="${common.externalCssFolderUrl}/css/ie.css" type="text/css" media="screen, projection"/>
  <![endif]-->

  <link rel="stylesheet" href="${common.externalCssFolderUrl}/css/plugins/fancy_type/screen.css" type="text/css" media="screen, projection"/>
  <script type="text/javascript" src="${common.externalCssFolderUrl}/js/jquery.js"></script>
  <script type="text/javascript" src="<c:url value='/data/js/common.js' />"></script>  
  <c:if test="${not empty common.cssPathRelativ || not empty common.cssPathAbsolut}">
  		<base target="_blank"/>
  </c:if>
  <decorator:head />
  <c:if test="${not empty common.cssPathRelativ}">
  	<link rel="stylesheet" href='<c:url value="${common.cssPathRelativ}"/>' type="text/css" media="screen, projection"/>
  </c:if>
  <c:if test="${not empty common.cssPathAbsolut}">
  	<link rel="stylesheet" href='${common.cssPathAbsolut}' type="text/css" media="screen, projection"/>
  </c:if>
</head>
<body>
  <div id="mother">
  
    <div class="container howgrid">
      <div id="header">
        <h1><url:homepage title="NA ÚVOD — STAVBOMANIE.CZ">${common.settings.title} <span></span></url:homepage></h1>
        <h2><fmt:message key="navigation.heading.${common.navigationHeadingNumber}"/></h2>
        <span class="theme th1"></span>
      </div>

      <c:if test="${empty common.loggedUser}">
      <!--   search   -->
      	<div id="search">
      	<form action="<c:url value="/hledat/" />" method="get">
        	<input class="span-4 query" name="query" value="<c:if test="${not empty model.searchQuery}">${model.searchQuery}</c:if><c:if test="${empty model.searchQuery}">hledat..</c:if>" type="text" /> 
            <input value="OK" class="submit-small" type="submit" />
      	</form>
      	</div>
      <!--   // search   -->
      <!--   login   -->
	  <div id="login">
	  	<a href="<c:url value="/login" />" class="ico-login">Přihlášení</a>
	  </div>
	  </c:if>

    <c:if test="${common.town != null}">
      <div id="mesta">
        <strong class="city">${common.town.name}</strong>
        <select id="L454" name="L454" onchange="if ($(this).val() != '') { location.href=$(this).val(); }">
          <option selected="selected" value="">jiná města</option>
          <c:forEach items="${common.towns}" var="town">
            <option value="<c:url value="/prepnout-mesto/${town.code}/" />">${town.name}</option>
          </c:forEach>
        </select>
      </div>
    </c:if>

	  <c:if test="${!empty common.loggedUser}">
	  <div id="logged">  
       <p>
         <security:authorize ifAnyGranted="ROLE_ADMIN">
         	<a href="<c:url value="/admin/index.html" />" class="ico-admin">Administrace</a>
         </security:authorize> 
         <a href="<c:url value="/logout.html" />" class="ico-logout">Odhlásit se</a>
         
		 <c:if test="${!empty common.loggedUser && !empty common.managedCompanies}">		 
			 <c:choose>
			 	<c:when test="${common.oneManagedCompany != null}">
			 		<br/>
			 		<a href="<c:url value="/${common.oneManagedCompany.code}/"/>">spravovat firmu &raquo;</a>
			 	</c:when>
			 	<c:otherwise>
			 		<select onchange="if ($(this).val() != '') { location.href=$(this).val(); }">
	              		<option value="">vyberte firmu..</option>
	              		<c:forEach items="${common.managedCompanies}" var="company">
	      					<option value="<c:url value="/${company.code}/"/>">${company.name}</option>
	      	      		</c:forEach>
	        		</select>
			 	</c:otherwise>
			 </c:choose>         
          </c:if>
         <br/>
         <a href="">${common.loggedUser.username}</a>  
        </p>        
      </div>
      </c:if>
	  <!--  //  login   -->

      <div class="prepend-1 append-1">
        <hr class="hide"/>

        <!-- Navigation -->
        <div id="navigation">
          <ul>
            <li><url:companyListing><span><fmt:message key="navigation.title.companies"/><br/><small><fmt:message key="navigation.title.companies.desc"/></small></span></url:companyListing></li>
            <li><a href="<c:url value="/eshop/"/>"><span><fmt:message key="navigation.title.products"/><br/><small><fmt:message key="navigation.title.products.desc"/></small></span></a></li>
            <li><url:referenceListing><span><fmt:message key="navigation.title.references"/><br/><small><fmt:message key="navigation.title.references.desc"/></small></span></url:referenceListing></li>
            <li><url:marketActionsListing><span><fmt:message key="navigation.title.marketActions"/><br/><small><fmt:message key="navigation.title.marketActions.desc"/></small></span></url:marketActionsListing></li>
          </ul>
        </div>
        <hr class="space hide"/>
        <!-- /Navigation -->

        <c:if test="${not empty model.breadcrumbs}">
          <!-- Breadcrumbs -->
          <div class="breadcrumbs">
            <p>
              <url:breadcrumbs breadcrumbs="${model.breadcrumbs}"></url:breadcrumbs>
            </p>
          </div>
          <!-- /Breadcrumbs -->
          <hr class="space hide"/>
        </c:if>
        
        <!-- Notices -->
        <c:if test="${model.notice != null}">
          <div class="notice"><strong>!</strong>&nbsp;<fmt:message key="${model.notice}"/></div>
        </c:if>
        <c:if test="${model.error != null}">
          <div class="error"><strong>!</strong>&nbsp;<fmt:message key="${model.error}"/></div>
        </c:if>
        <c:if test="${model.success != null}">
          <div class="success"><fmt:message key="${model.success}" /></div>
        </c:if>
        <!-- /Notices  -->

        <!-- Content Index -->
        <decorator:body/>
        <!-- /Content Index -->
      </div>
      <hr class="space hide"/>
      
      <jsp:include page="/WEB-INF/jsp/public/include/trinec.jsp"/>
      <jsp:include page="/WEB-INF/jsp/public/include/footer.jsp"/>
    </div>
  </div>
  
  <%@ include file="/WEB-INF/jsp/public/include/search-tooltip.jsp" %>

  <script type="text/javascript" src="<c:url value='/data/lightbox/jquery.lightbox.js' />"></script>
  <script type="text/javascript">
    $(function(){
        $("a.lightbox").lightbox({
            fitToScreen: true,
            imageClickClose: false,
            fileLoadingImage : '<c:url value="/data/lightbox/images/loading.gif" />',
            fileBottomNavCloseImage : '<c:url value="/data/lightbox/images/closelabel.gif" />'
        });
    });
  </script>
</body>
</html>