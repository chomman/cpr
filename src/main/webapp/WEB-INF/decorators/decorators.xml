<decorators defaultdir="/WEB-INF/decorators/jsp">
	
	<excludes>	  
		<pattern>*/resources/*</pattern>
		<pattern>*.htm</pattern>
		<pattern>*.ftl</pattern>
		<pattern>/admin/file-manager/*</pattern>
	</excludes>
    
  <decorator name="blank" page="blank.jsp">
    <pattern>/blank/*</pattern>
  </decorator>
	
  <decorator name="admin-login" page="admin-login.jsp">
    <pattern>/admin/login</pattern>
  </decorator>	
  
  <decorator name="admin" page="admin.jsp">
    <pattern>/admin/*</pattern>
  </decorator>
  
  <decorator name="public" page="public.jsp">
    <pattern>/*</pattern>
  </decorator>

</decorators>
