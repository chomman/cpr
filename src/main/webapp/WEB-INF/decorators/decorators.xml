<decorators defaultdir="/WEB-INF/decorators/jsp">
	
	<excludes>	  
		<pattern>*/resources/*</pattern>
		<pattern>*.htm</pattern>
		<pattern>*.ftl</pattern>
		<pattern>/admin/file-manager*</pattern>
		<pattern>/async/*</pattern>
		<pattern>/en/async/*</pattern>
		<pattern>/admin/quasar/async/*</pattern>
	</excludes>
  
   <decorator name="portal" page="portal.jsp">
    <pattern>/informacni-portal*</pattern>
    <pattern>/en/informacni-portal*</pattern>
  </decorator>
    
  <decorator name="blank" page="blank.jsp">
  	<pattern>/widget/*</pattern>
	<pattern>/en/widget/*</pattern>
    <pattern>/blank/*</pattern>
    <pattern>/auth/*</pattern>
  </decorator>
	
  <decorator name="admin-login" page="admin-login.jsp">
    <pattern>/admin/login</pattern>
  </decorator>	
  
  <decorator name="admin" page="admin.jsp">
    <pattern>/admin/*</pattern>
  </decorator>
  
  <decorator name="public" page="public.jsp">
    <pattern>/*</pattern>
  </decorator>

</decorators>
