<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="File" value="/home/page/cpr.log"/>
        <param name="DateRollEnforced" value="true" />
        <param name="DatePattern" value=".yyyy-MM-dd"/>
        <param name="MaxFileSize" value="20MB"/>
        <param name="MaxRollFileCount" value="150"/>
        <param name="ScavengeInterval" value="30000"/>
        <param name="BufferedIO" value="false"/>
        <param name="CompressionAlgorithm" value="ZIP"/>
        <param name="CompressionMinQueueSize" value="5"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{HH:mm:ss} %C{1}:%M(line %L) - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="sk.peterjurkovic.cpr">
		<level value="info" />
	</logger>
	

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="file" />
	</root>
	
</log4j:configuration>
